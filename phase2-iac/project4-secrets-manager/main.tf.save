# 1. The Foundation: The VPC
resource "aws_vpc" "main_vpc" {
  cidr_block           = "10.0.0.0/16"
  enable_dns_hostnames = true
  tags = {
    Name = "Day18-Secure-VPC"
  }
}

# 2. The Front Door: Internet Gateway
# Without this, NO part of your VPC can ever see the internet.
resource "aws_internet_gateway" "igw" {
  vpc_id = aws_vpc.main_vpc.id
  tags = {
    Name = "Day18-Gateway"
  }
}

# 3. The Public Zone (The "Front Porch")
resource "aws_subnet" "public_subnet" {
  vpc_id                  = aws_vpc.main_vpc.id
  cidr_block              = "10.0.1.0/24"
  availability_zone       = "us-east-1a"
  map_public_ip_on_launch = true # This makes it "Public"
  tags = {
    Name = "Public-Zone-1"
  }
}

# 4. The Private Zone (The "Vault")
resource "aws_subnet" "private_subnet" {
  vpc_id            = aws_vpc.main_vpc.id
  cidr_block        = "10.0.2.0/24"
  availability_zone = "us-east-1a"
  tags = {
    Name = "Private-Zone-1"
  }
}

# 5. The Traffic Map: Public Route Table
resource "aws_route_table" "public_rt" {
  vpc_id = aws_vpc.main_vpc.id

  route {
    cidr_block = "0.0.0.0/0" # All traffic not meant for the VPC...
    gateway_id = aws_internet_gateway.igw.id # ...goes to the Internet Gateway.
  }

  tags = {
    Name = "Public-Route-Table"
  }
}

# 6. The Glue: Associate the Public Subnet with the Public Route Table
resource "aws_route_table_association" "public_assoc" {
  subnet_id      = aws_subnet.public_subnet.id
  route_table_id = aws_route_table.public_rt.id
}

# NOTE: We do NOT create a route table for the Private Subnet. 
# It will automatically use the VPC's "Main" route table which has NO internet access.
